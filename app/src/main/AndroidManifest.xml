<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="crepes.fr.androcrepes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".controller.Controller"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CuisineActivity"
            android:label="@string/cuisine_activityTitle" />
        <activity
            android:name=".view.AideActivity"
            android:label="@string/aide_activityTitle" />
        <activity
            android:name=".view.TableActivity"
            android:label="@string/salle_activityTitle" />
        <activity
            android:name=".view.SalleActivity"
            android:label="@string/table_activityTitle" />
        <activity
            android:name=".view.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/PreferenceThemeB"/>
    </application>

</manifest>
