<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/laBonneCrepe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Bonne CrÃ¨pe"
        android:textColor="#181870"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:typeface="serif"
        android:textStyle="bold"
        android:theme="@style/Base.AlertDialog.AppCompat.Light" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/crepes"
        android:contentDescription="@string/Logo"
        android:layout_gravity="center"
        android:layout_weight="231.30"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuisine"
                android:layout_gravity="left"
                android:id="@+id/btnHomeCuisine"
                android:onClick="goCuisine"
                android:background="#9C27B0"
                android:textColor="#F0FFFF" />

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="0dp"></FrameLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salle"
                android:layout_gravity="right"
                android:id="@+id/btnHomeSalle"
                android:onClick="goSalle"
                android:background="#3F51B5"
                android:textColor="#F0FFFF"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aide"
                android:layout_gravity="left"
                android:id="@+id/btnHomeAide"
                android:onClick="goAide"
                android:background="#FF5722"
                android:textColor="#F0FFFF" />

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="0dp"></FrameLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_gravity="right"
                android:id="@+id/btnHomeLog"
                android:onClick="goLog"
                android:background="#A02828"
                android:textColor="#F0FFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


