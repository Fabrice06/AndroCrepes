<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonCuisineGoHome"
            android:src="@drawable/home"
            android:background="@drawable/roundedbutton"
            android:onClick="goHome"/>

        <FrameLayout
        android:layout_width="5dp"
        android:layout_height="0dp"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/cuisine_textViewInfoId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cuisine_textViewInfoText"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@color/colorTxtTitle" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/custom_zone2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico"
                />

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="0dp"
                ></FrameLayout>

            <EditText
                android:id="@+id/cuisine_editTextQuantiteId"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cuisine_editTextQuantiteColor"
                android:inputType="number"
                android:hint="1"
                android:text="1"
                />

            <EditText
                android:id="@+id/cuisine_editTextPlatId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cuisine_editTextPlatColor"
                android:inputType="text"
                android:hint="@string/textNouveauPlat"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="@string/btnAjouter"
                android:id="@+id/buttonCuisineAddNewPlat"
                android:layout_gravity="right"
                android:background="@drawable/roundedbuttonplus"
                android:textColor="@color/colorTxtBtn"
                android:onClick="addNewPlat"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cuisine_listView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="90"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0px"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>

</LinearLayout>

