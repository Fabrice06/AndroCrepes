<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/custom_zone"
    android:layout_margin="20dp"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left">



        <TextView
            android:id="@+id/listadapter_textViewQuantiteId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="0"
            android:gravity="center"
            android:background="@drawable/roundedqte"
            android:textColor="@color/colorTxtBtn"
            />

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="0dp">
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XXX"
            android:id="@+id/listadapter_textViewInfoId"
            android:textColor="@color/colorTxt"
            android:textSize="20dp"
            android:ellipsize="end"
            android:gravity="center"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutRowPlat">

        <Button
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="@string/btnAnnuler"
            android:id="@+id/buttonListAdapterLeft"
            android:layout_gravity="left"
            android:background="@drawable/roundedbuttonmoins"
            android:textColor="@color/colorTxtBtn"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"></FrameLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="@string/btnCommander"
            android:id="@+id/buttonListAdapterRight"
            android:background="@drawable/roundedbuttonplus"
            android:textColor="@color/colorTxtBtn"/>

    </LinearLayout>

</LinearLayout>