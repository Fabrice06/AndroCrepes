<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/custom_zone"
    android:layout_margin="20dp"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">


        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico"
            />

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="0dp"
            ></FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XXX"
            android:id="@+id/txtRowInfo"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="10dp"></FrameLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutRowPlat">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Retirer"
            android:id="@+id/btnRowRemove"
            android:layout_gravity="left"
            android:background="@drawable/roundedbuttonmoins"
            android:textColor="#F0FFFF"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Ajouter"
            android:id="@+id/btnRowAdd"
            android:layout_gravity="right"
            android:background="@drawable/roundedbuttonplus"
            android:textColor="#F0FFFF"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"></FrameLayout>

    </LinearLayout>

</LinearLayout>