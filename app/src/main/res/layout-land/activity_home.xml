<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@android:color/holo_orange_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragmentSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" ></FrameLayout>

        <TextView
            android:id="@+id/laBonneCrepe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_home"
            android:textColor="@color/colorTxtTitle"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:typeface="serif"
            android:textStyle="bold"
            android:theme="@style/Base.AlertDialog.AppCompat.Light" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/crepes"
            android:contentDescription="@string/Logo"
            android:layout_gravity="center"
            android:layout_weight="231.30"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCuisine"
            android:layout_gravity="center"
            android:id="@+id/btnHomeCuisine"
            android:onClick="goCuisine"
            android:background="@color/colorBtnCuisine"
            android:textColor="@color/colorTxtBtn"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSalle"
            android:layout_gravity="center"
            android:id="@+id/btnHomeSalle"
            android:onClick="goSalle"
            android:background="@color/colorBtnSalle"
            android:textColor="@color/colorTxtBtn"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnLogout"
            android:layout_gravity="center"
            android:id="@+id/btnHomeLog"
            android:onClick="goLog"
            android:background="@color/colorBtnLog"
            android:textColor="@color/colorTxtBtn" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAide"
            android:layout_gravity="center"
            android:id="@+id/btnHomeAide"
            android:onClick="goAide"
            android:background="@color/colorBtnAide"
            android:textColor="@color/colorTxtBtn" />

    </LinearLayout>

</LinearLayout>


