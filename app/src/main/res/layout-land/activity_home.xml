<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@color/background_activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragmentSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondPreferences"></FrameLayout>

        <crepes.fr.androcrepes.commons.framework.CustomTextView
            android:id="@+id/home_customTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_customTextViewTitle"
            android:textColor="@color/font_customTextViewTitle"
            android:layout_gravity="center"
            android:typeface="serif"
            android:textStyle="bold"
            android:theme="@style/Base.AlertDialog.AppCompat.Light" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/crepes"
            android:contentDescription="@string/Logo"
            android:layout_gravity="center"
            android:layout_weight="231.30"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_buttonCuisine"
            android:layout_gravity="center"
            android:id="@+id/home_buttonCuisine"
            android:onClick="goCuisine"
            android:background="@color/background_homeButtonCuisine"
            android:textColor="@color/font_button"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_buttonSalle"
            android:layout_gravity="center"
            android:id="@+id/home_buttonSalle"
            android:onClick="goSalle"
            android:background="@color/background_homeButtonSalle"
            android:textColor="@color/font_button"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/home_buttonLog"
            android:onClick="goLog"
            android:background="@color/background_homeButtonLog"
            android:textColor="@color/font_button" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_buttonAide"
            android:layout_gravity="center"
            android:id="@+id/home_buttonAide"
            android:onClick="goAide"
            android:background="@color/background_homeButtonAide"
            android:textColor="@color/font_button" />

    </LinearLayout>

</LinearLayout>


